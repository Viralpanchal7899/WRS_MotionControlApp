<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeTransformationMatrices">


    <Button
        android:id="@+id/start_angle_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="146dp"
        android:text="START"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/next_iteration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="146dp"
        android:text="NEXT"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pelvis_LT_theta_x"
        android:layout_width="117dp"
        android:layout_height="45dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="148dp"
        android:text=""
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/pelvis_RT_theta_y"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pelvis_RT_angles" />

    <TextView
        android:id="@+id/pelvis_LT_theta_z"
        android:layout_width="117dp"
        android:layout_height="45dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="21dp"
        android:text=""
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/pelvis_RT_theta_y"
        app:layout_constraintTop_toBottomOf="@+id/pelvis_RT_angles" />

    <TextView
        android:id="@+id/pelvis_LT_theta_y"
        android:layout_width="117dp"
        android:layout_height="45dp"
        android:layout_marginTop="148dp"
        android:text=""
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/pelvis_RT_theta_z"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/pelvis_RT_theta_x"
        app:layout_constraintTop_toBottomOf="@+id/pelvis_RT_angles" />

    <TextView
        android:id="@+id/pelvis_RT_angles"
        android:layout_width="351dp"
        android:layout_height="36dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="21dp"
        android:text=""
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next_iteration" />

    <TextView
        android:id="@+id/pelvis_LT_angles"
        android:layout_width="351dp"
        android:layout_height="36dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="21dp"
        android:text=""
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next_iteration" />

    <TextView
        android:id="@+id/pelvis_RT_theta_x"
        android:layout_width="117dp"
        android:layout_height="45dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="18dp"
        android:text=""
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/pelvis_RT_theta_y"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pelvis_RT_angles" />

    <TextView
        android:id="@+id/pelvis_RT_theta_y"
        android:layout_width="117dp"
        android:layout_height="45dp"
        android:layout_marginTop="18dp"
        android:text=""
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/pelvis_RT_theta_z"
        app:layout_constraintStart_toEndOf="@+id/pelvis_RT_theta_x"
        app:layout_constraintTop_toBottomOf="@+id/pelvis_RT_angles" />

    <TextView
        android:id="@+id/pelvis_RT_theta_z"
        android:layout_width="117dp"
        android:layout_height="45dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="21dp"
        android:text=""
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pelvis_RT_theta_y"
        app:layout_constraintTop_toBottomOf="@+id/pelvis_RT_angles" />

</androidx.constraintlayout.widget.ConstraintLayout>